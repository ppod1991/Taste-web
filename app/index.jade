doctype html
html(lang="en" ng-app="fantasyApp" ng-controller="MainCtrl")
	head
		script(type="text/javascript").
			if (window.location.hash == '#_=_'){
				history.replaceState ? history.replaceState(null, null, window.location.href.split('#')[0]): window.location.hash = '';
			}
		meta(charset="utf-8")
		meta(name="fragment" content="!")
		meta(name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=no")
		meta(name="author" content="Piyush Poddar")
		title T A S T E - {{main.getMeta().title}}
		meta(property="fb:app_id" content="193198737555570")
		meta(property="og:type" content="tasteapplication:eatery")
		meta(property="og:url" content="http://desolate-plateau-4658.herokuapp.com/#!/places/{{main.getMeta().snap_id}}")
		meta(property="og:title" content="{{main.getMeta().title}}")
		meta(property="og:image" content="{{main.getMeta().picture_URL}}")
		meta(property="place:location:latitude" content="{{main.getMeta().store_latitude}}")
		meta(property="place:location:longitude" content="{{main.getMeta().store_longitude}}")
		link(href="/css/bootstrap.css" rel="stylesheet")
		link(href="/css/business-casual.css" rel="stylesheet")
		link(href='http://fonts.googleapis.com/css?family=Italianno' rel='stylesheet' type='text/css')
		link(href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,300italic' rel='stylesheet' type='text/css')
	body(ng-controller="HeaderController")
		div.my-background(ng-class="'background-image-' + main.getMeta().kind" ng-style="{ 'background': 'url(' + main.getMeta().background_url +') no-repeat center center fixed','-webkit-background-size': 'cover',  '-moz-background-size': 'cover',  '-o-background-size': 'cover', 'background-size': 'cover'}")
		div.content
			div.brand(ng-class="'brand-' + main.getMeta().kind") {{main.getMeta().title}}
			div.address-bar(ng-if="main.getMeta().kind === 'restaurant'") {{main.getMeta().store_street_address}} | {{main.getMeta().store_city}}, {{main.getMeta().store_state}} {{main.getMeta().store_zipcode}} | {{main.getMeta().store_phone_number.substring(0,3)}}.{{main.getMeta().store_phone_number.substring(3,6)}}.{{main.getMeta().store_phone_number.substring(6,10)}}
			div.address-bar(ng-if="main.getMeta().kind === 'default'") share pics . get gifts . yum
			
			nav.navbar(class="navbar-default" role="navigation")
				div.container
					div.navbar-header
						button.navbar-toggle(type="button" data-toggle="collapse" data-target=".navbar-ex1-collapse")
							span.sr-only Toggle navigation
							span.icon-bar
							span.icon-bar
							span.icon-bar
						a.navbar-brand taste
				div.collapse(class="navbar-collapse navbar-ex1-collapse")
					ul.nav(class="navbar-nav")
						li(data-ng-repeat="entry in navbarEntries" ng-if="auth")
							a.custom-nav(href="#!{{entry.link}}") {{entry.title.toUpperCase()}}
						li(ng-if="!!!auth") 
							a.custom-nav(href='' ng-click="login()") LOG IN
						li(ng-if="!!auth")
							a.custom-nav(href='' ng-click="logout()") LOG OUT
			div.container
				div.fades(ng-view)

		script(src="http://static.firebase.com/v0/firebase.js")
		script(src="https://cdn.firebase.com/v0/firebase-simple-login.js")
		script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.2.12/angular.min.js")
		script(src="//ajax.googleapis.com/ajax/libs/angularjs/1.2.12/angular-animate.js")
		script(src="/js/jquery-1.10.2.js")
		script(src="/js/bootstrap.js")
		script(src="lib/angular-bootstrap/ui-bootstrap-tpls.min.js")
		script(src="lib/angular-route/angular-route.min.js")
		script(src="//ajax.googleapis.com/ajax/libs/angularjs/1.2.12/angular-resource.js")
		script(src="lib/angular-fire/angularFire.js")
		script(src="js/app.js")
		script(src="js/config.js")
		script(src="js/controllers/headercontroller.js")
		script(src="js/controllers/signincontroller.js")
		script(src="js/controllers/feedcontroller.js")
		script(src="js/controllers/snapcontroller.js")
		script(src="js/controllers/fancontroller.js")
		script(src="js/controllers/userTestController.js")
		script(src="js/controllers/placecontroller.js")
		script(src="js/controllers/maincontroller.js")
		script(src="js/controllers/urlcontroller.js")
