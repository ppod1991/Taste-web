div.row.box
	div.col-xs-12
		div#images.row
			div.col-xs-6
				img.img-responsive(class="img-full" ng-src="{{childMeta.picture_URL}}" alt="")
			div.col-xs-6
				div.row
					div.col-xs-12.dark-box
						table
							tr
								td(colspan="2").text-center
									div.row
										button.btn(style="margin-bottom:4px;white-space: normal;" class="btn-primary" type="button" ng-if="!(!auth || isFirstPromotion)" ) you've claimed a gift from {{childMeta.title.toLowerCase()}}!
										a
											button.btn(style="margin-bottom:4px;white-space: normal;" ng-click="addPromotion()" class="btn-primary" type="button" ng-if="!(!auth || !isFirstPromotion)" ) claim your gift <span class="glyphicon glyphicon-gift"></span>
										a(href="{{'/auth/facebook/places/' + snap_id}}")
											button.btn(style="margin-bottom:4px;white-space: normal;" class="btn-primary" type="button" ng-if="!auth") sign in to claim your gift! <span class="glyphicon glyphicon-gift"></span>
							tr
								td(colspan="2")
									hr.tagline-divider
							tr
								div.row
								td
									p
										em
											"{{childMeta.store_description}}"
								td
									a.btn(href="{{childMeta.store_yelp_url}}")
										img.img-circle(class="img-responsive" src="/img/yelp-icon.png" height="40" width="40")
				div.row
					div.col-xs-12.dark-box
						iframe(frameborder="0" class="img-half" height="201" width="201" style="border:0" ng-src="{{childMeta.store_location_url}}")
		div.row
			div#storeDescription.col-xs-12.text-center
				h2
					small Welcome to
				h1
					span.brand-name {{childMeta.title}}
				hr.tagline-divider
				h2
					small via 
						strong Taste
	
