div.box
	div.row
		div.col-xs-12.col-lg-12
			div#images.row
				div.col-lg-6.col-xs-12
					img.img-responsive(class="img-full" ng-src="{{childMeta.picture_URL}}" alt="")
					br
				div.col-lg-6.col-xs-12
					div.row
						div.col-xs-12.col-lg-12
							div.dark-box
								table
									div.row
										div.col-xs-12.col-lg-12
											tr
												td(colspan="2").text-center
													a.fades(ng-if="auth===childMeta.referring_user_id")
														button.btn.btn-promotion(style="margin-bottom:4px;white-space: normal;" type="button") Share this page to share your gifts! <br> <span class="glyphicon glyphicon-gift"></span>
													a.fades(ng-if="!(!auth || auth===childMeta.referring_user_id || timeRemaining < 0)")
														//- p {{!(!auth || auth===childMeta.referring_user_id || timeRemaining < 0}} auth {{auth}} time {{timeRemaining}}
														button.btn.btn-promotion(style="margin-bottom:4px;white-space: normal;" ng-click="addPromotion()" type="button") claim {{childMeta.user_first_name.toLowerCase()}}'s gift to {{childMeta.title}} within the next {{timeRemainingText}}! <br> <span class="glyphicon glyphicon-gift"></span>
													a.fades(href='' ng-if="!(auth || timeRemaining < 0)")
														button.btn.btn-promotion(ng-click="login()" style="margin-bottom:4px;white-space: normal;" type="button") sign in to claim {{childMeta.user_first_name.toLowerCase()}}'s gift to {{childMeta.title}} within the next {{timeRemainingText}}! <br> <span class="glyphicon glyphicon-gift"></span>
													a.fades(href='' ng-if="!(timeRemaining > 0 || auth===childMeta.referring_user_id)") 
														button.btn.btn-promotion(style="margin-bottom:4px;white-space: normal;" type="button") {{childMeta.user_first_name.toLowerCase()}} ran out of gifts!
									div.row
										div.col-xs-12.col-lg-12
											tr
												td(colspan="2")
													hr.tagline-divider
									div.row
										div.col-xs-12.col-lg-12
											tr
												td
													p.text-center
														em "{{childMeta.store_description}}"
									div.row
										div.col-xs-12.col-lg-12
											tr
												td(colspan="2").text-center
													a(href="{{childMeta.store_yelp_url}}" target="_blank")
														img.img-circle.yelp(src="/img/yelp-icon.png" height="40" width="40")
					div.row
						div.col-xs-12.col-lg-12
							div.dark-box
								iframe.sepia(frameborder="0" height="201" width="201" style="border:0; width:100%" ng-src="{{childMeta.store_location_url}}")
	div.row
		div.col-xs-12.col-lg-12
			hr.tagline-divider
			h2.text-center
				small brought to you by 
